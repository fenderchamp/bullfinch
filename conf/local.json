{
    "config_refresh_seconds": 300,
	"performance": {
		"collect": false,
        "kestrel_host" : "172.16.49.130",
        "kestrel_port" : 2222,
		"queue": "metrics"
	},
    "workers" : [
        {
            "name" : "JDBC Worker",
